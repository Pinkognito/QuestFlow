        android:fillColor="#8B7355"
        android:pathData="M80,50 h20 v5 h-20 z
                         M85,45 v15
                         M90,45 v15
                         M95,45 v15"/>

    <!-- Bottom half - approval -->
    <path
        android:fillColor="#D4F1F4"
        android:pathData="M0,100 h200 v100 h-200 z"/>

    <!-- Drake figure bottom -->
    <path
        android:fillColor="#8B7355"
        android:pathData="M50,130 a20,20 0 1,1 0,40 a20,20 0 1,1 0,-40"/>

    <!-- Hand gesture - pointing -->
    <path
        android:fillColor="#8B7355"
        android:pathData="M80,150 l20,0 l0,5 l-15,0 l-5,-5
                         M100,150 l10,0"/>

    <!-- Smile -->
    <path
        android:strokeColor="#000000"
        android:strokeWidth="2"
        android:fillColor="#00000000"
        android:pathData="M40,155 Q50,165 60,155"/>

    <!-- Division line -->
    <path
        android:strokeColor="#000000"
        android:strokeWidth="2"
        android:pathData="M0,100 h200"/>
